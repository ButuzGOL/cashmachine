<div class="row">
  <div class="col-md-6 col-md-offset-3">
    {{#if errorMessage}}
      <div class="alert alert-error">{{errorMessage}}</div>
    {{/if}}
    <form class="form-horizontal" role="form" {{action login on="submit"}}>

      {{#if isFirstStage}}
        <section id="signin-stage-zero">
          <div class="form-group">
            <label for="number" class="col-sm-4 control-label">Card number</label>
            <div class="col-sm-8">
              {{input value=number required="required" type="text" class="form-control"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              {{input class="btn btn-default pull-right" type="submit" value="Next"}}
            </div>
          </div>
        </section>
      {{/if}}

      {{#if isSecondStage}}
        <section id="signin-stage-first">
          <div class="form-group">
            <label for="pin" class="col-sm-4 control-label">Pin</label>
            <div class="col-sm-8">
              {{input value=pin required="required" type="password" class="form-control"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
              {{input class="btn btn-primary pull-right" type="submit" value="Submit"}}
              <button class="btn btn-default" type="button" {{action 'cancel'}}>Cancel</button>
            </div>
          </div>
        </section>
      {{/if}}
    </form>
  </div>
</div>
