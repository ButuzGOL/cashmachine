<h5>Take money</h5>
<div class="col-md-9 col-md-offset-3">
  {{#if currentOperation}}
    {{render "card/_operation" currentOperation}}
  {{ else }}
    {{#if errorMessage}}
      <p class="bg-danger">{{errorMessage}}</p>
    {{/if}}
    <form class="form-horizontal" role="form" {{action take on="submit"}}>
      <div class="form-group">
        <label for="number" class="col-sm-4 control-label">Amount</label>
        <div class="col-sm-8">
          {{input type=number value=money required="required" type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          {{input class="btn btn-default pull-right" type="submit" value="Submit"}}
          {{#link-to "index" class="btn btn-default" tagName="button"}}Cancel{{/link-to}}
        </div>
      </div>
    </form>
  {{/if}}
</div>
